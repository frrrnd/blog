.notes
	&-page
		padding-top 10vh

	&__list


	&__article
		margin-bottom 10vh
		position relative

		&:last-child
			border-bottom 0
	
	&__header
		width 100%
	
	&__list--year
		margin 2vh 0 2vh 0
		color minegray
		set-font-size 40px
		width 100%
		text-align right
		font-weight normal
		font-family monospace
		padding-right 20px
		position relative
	
	&__title
		color var(--text-color)
		set-font-size 40px
		font-weight normal
		width 75%

		+below(47.25rem)
			set-font-size 32px
			width 100%

		a
			color inherit
	
	&__time
		color var(--menu-color)
		font-weight normal
		set-font-size 15px
		font-family font-sans-serif
	
	&__content
		p
			margin 0 0 20px 0