.notes
	&__list
		padding-left 31px

		+below(47.25rem)
			padding-left 0

	&__article
		margin-bottom 3vh
		position relative

		&:last-child
			border-bottom 0
	
	&__header
		width 100%
		display flex
		flex-direction row

		time
			margin-right 21px
	
	&__title
		color var(--text-color)
		width 100%
		set-font-size 16px

		a
			color inherit

			&:hover
				color var(--link-color)
	
	&__content
		p
			margin 0 0 20px 0


// Home

.notes__home
	display flex
	flex-direction column

.summary__home
	display flex
	flex-direction row

	time
		margin-right 21px