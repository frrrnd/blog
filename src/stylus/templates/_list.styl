.notes
	&__list
		padding-left 31px

		+below(47.25rem)
			padding-left 0

	&__article
		margin-bottom .8vh
		position relative
		border-radius 5px
		transition .4s
		
		&:last-child
			border-bottom 0

		&:hover
			background-color #101010
			transition .4s
	
	&__header
		width 100%
		display flex
		flex-direction row
		align-items center
		padding 0 10px

		time
			margin-right 21px
	
	&__title
		color var(--text-color)
		width 100%
		set-font-size 16px

		a
			color inherit
			width 100%
			display block
			padding 20px 0

			&:hover
				color var(--link-color)
	
	&__content
		p
			margin 0 0 20px 0


// Home

.notes__home
	display flex
	flex-direction column

.summary__home
	display flex
	flex-direction row

	time
		margin-right 21px

.btn-allNotes
	background-color #101010
	display block
	width max-content
	padding 10px 15px
	border-radius 5px