.notes
	&-page
		padding-top 10vh

	&__list
		padding-left 31px

		+below(47.25rem)
			padding-left 0

	&__article
		margin-bottom 5vh
		position relative

		&:last-child
			border-bottom 0
	
	&__header
		width 100%
	
	&__title
		color var(--text-color)
		font-weight 500
		width 100%
		set-font-size 24px

		a
			color inherit

			&:hover
				color var(--link-color)
	
	&__content
		p
			margin 0 0 20px 0