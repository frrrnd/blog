.notes
	width 100%

	.wrap
		border-top 1px solid #1c1c1c
		padding-top spacing(24px)
		padding-bottom spacing(24px)

	article
		padding spacing(16px) 0
	
	header
		a
			width 100%
			display flex
			align-items center

			time
				max-width 71px
				width 100%
				text-align right

			&:hover
				transition .4s

				
				h3
					color var(--text-secondary-color)
					transition .4s
		
		h3
			transition .4s
			set-font-size 16px
			margin-left 16px

.notes-page
	padding-bottom spacing(24px)
	border-top 1px solid #1c1c1c
	padding-top spacing(24px)