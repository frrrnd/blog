.notes
	&-page
		padding-top 5vh

	&__article
		margin-bottom 5vh
	
	&__header
		width 100%
	
	&__list--year
		margin 10vh 0 2vh 0
		color minegray
		font-size 1.4rem
	
	&__title
		color text-site-color
		margin-bottom 4px
