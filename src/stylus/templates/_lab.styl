.lab__list
    width 100%
    margin 1vh auto 0
    padding-bottom 2vh

.lab__article
    width 100%
    border-top 1px solid var(--divider-color)
    padding spacing(24px) 0

    > a
        display flex
        flex-direction row
        justify-content space-between
        margin-bottom spacing(24px)
        align-items center

    h3
        set-font-size 16px
        width 100%

        a
            color white

    figure
        margin-bottom spacing(24px)
        display block

.lab-content
    margin-bottom spacing(24px)

    iframe
        margin spacing(24px) 0

    img
        max-width 100%
    
    figure
        margin 0 0 spacing(16px) 0

    a
        text-decoration underline

// single

.lab__header
    display flex
    flex-direction row
    justify-content space-between
    margin-bottom spacing(24px)
    align-items center
    
    h1
        set-font-size 20px