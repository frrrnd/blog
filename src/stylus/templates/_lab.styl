.lab-page
    +below(47.25rem)
        padding 0 21px

.lab__list
    width 100%
    display grid
    grid-template-columns 1fr 1fr 1fr
    grid-gap 21px
    margin 1vh auto 0
    padding-bottom 2vh

    +below(47.25rem)
        grid-template-columns 1fr 1fr


.lab__article
    width 100%
    margin 1vh 1vw
    border 1px solid #111
    border-radius 10px
    box-shadow 0 1px 0 0 rgba(0, 0, 0, 0.2), 0 -1px 0 0 #242424,
        1px 0 0 0 rgba(0, 0, 0, 0.2), -1px 0 0 0 rgba(0, 0, 0, 0.2)
    position relative
    overflow hidden

    a
        &:after
            content ""
            width 100%
            height 100%
            background linear-gradient(rgba(0,0,0,0), rgba(0,0,0,1))
            position absolute
            top 0
            left 0
            z-index 3
            transition .4s
        
        &:hover img
            scale 1.1
            transition .4s

    figure
        margin 0
        border-radius 10px
        height 100%

        img
            border-radius 10px
            height 100%
            transition .4s

            +below(47.25rem)
                height auto

    h3
        font-size 16px
        position absolute
        bottom 0
        z-index 4
        width 100%
        padding 12px
        border-bottom-left-radius 10px
        border-bottom-right-radius 10px

        a
            color white

// single

.lab__header
    h1
        set-font-size 20px

.lab__content
    padding-left 21px

    +below(47.25rem)
        padding-left 0