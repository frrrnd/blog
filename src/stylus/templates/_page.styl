.page-content
    p
        margin-bottom 30px
    a
        color link-color
        font-weight bold

.a-emoji-list
    list-style-type none
    padding-left 0
    display flex
    flex-direction row
    width 100%
    justify-content center

    li
        display flex
        flex-direction column
        align-items center

    i
        display block
        width 100%
        text-align center
        font-size 1.8em
        font-style normal
        padding 12px

        +below(47.25rem)
            font-size 1.2em


.gallery-wrapper
    padding 0.3em
    display grid
    grid-template-columns repeat(auto-fit, minmax(200px, 1fr))
    grid-auto-flow dense
    grid-gap 5px

    .big
        grid-row span 3
        grid-column span 3

    .wide
        grid-column span 4
    
    .tall
        grid-row span 2

.t-page__about
    .article__content
        padding-top 7vh

        +below(47.25rem)
            padding-top 4vh