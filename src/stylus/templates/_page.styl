.t-page
    &__about
        &__headline
            position absolute
            z-index 1
            -webkit-text-stroke 1px black
            -webkit-text-fill-color transparent
            text-transform uppercase
            &:before
                content "hello"
                writing-mode vertical-rl
                -webkit-text-stroke none
                -webkit-text-fill-color black
        
        &__image
            img
                max-width 60%
                margin 0 auto
                display block

.page-content
    p
        margin-bottom 30px
    a
        color link-color
        font-weight bold

.a-emoji-list
    list-style-type none
    padding-left 0
    display flex
    flex-direction row
    width 100%
    justify-content center

    li
        display flex
        flex-direction column
        align-items center

    i
        display block
        width 100%
        text-align center
        font-size 1.8em
        font-style normal
        padding 12px