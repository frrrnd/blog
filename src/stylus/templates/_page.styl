.t-page
    &__title
        set-font-size 20px
        text-transform capitalize
        color var(--dark-meta)
        margin-bottom 12px

.page__wrap
    max-width wrap-max-width
    margin 0 auto

    +below(47.25rem)
        padding 0 20px

    h1
        set-font-size 32px
        margin-bottom 32px

    h2
        margin-bottom 32px
    
    h3
        margin-bottom 21px

    p
        margin-bottom 21px

    li
        margin-bottom 12px
    
    ul
        margin-bottom 32px

// entities
.t-page__entities
    table
        padding 0
        border-collapse collapse
        width 100%
        margin 1rem auto

        caption
            text-align left
            set-font-size 14px
            font-weight bold

        thead th
            background-color var(--background-color)
            color var(--text-color)
            border none

        tbody tr:nth-child(even)
            background-color var(--background-color)
            color var(--text-color)

        tbody tr:nth-child(odd)
            background-color var(--zebra-color)
            color var(--text-color)
        
        tbody tr th
            background-color var(--background-color)
            color var(--link-color)
            border none
            set-font-size(20px)

        tbody td
            border none
            padding 18px 0 18px 10px

        tbody tr > th
            padding 44px 0
            text-align left


// checkbox da pagina /leituras

input[type="checkbox"]
    filter invert(1)

.page__wrap
    ul
        padding-left 0
        list-style-type none

    li:has(input[type="checkbox"]:checked)
        color gray

.content__wrap
    padding-left 31px


// links


.links__wrap
    width 100%
    margin 0 auto

    a
        display block
        margin 12px 0
        padding 15px 5px
        border-radius 5px
        color var(--text-color)
        transition .4s

        &:hover
            color var(--link-color)
            transition .4s
    
    h3
        margin-top 31px