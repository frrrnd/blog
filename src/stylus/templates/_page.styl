.t-page
    &__about
        &__headline
            position absolute
            z-index 1
            text-transform uppercase
        
        &__image
            +below(47.25rem)
                margin 0
            img
                max-width 60%
                margin 0 auto
                display block

.page-content
    p
        margin-bottom 30px
    a
        color link-color
        font-weight bold

.a-emoji-list
    list-style-type none
    padding-left 0
    display flex
    flex-direction row
    width 100%
    justify-content center

    li
        display flex
        flex-direction column
        align-items center

    i
        display block
        width 100%
        text-align center
        font-size 1.8em
        font-style normal
        padding 12px

        +below(47.25rem)
            font-size 1.2em