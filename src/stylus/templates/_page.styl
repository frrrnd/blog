.page-content
    p
        margin-bottom 30px
    a
        color link-color

.a-emoji-list
    list-style-type none
    padding-left 0
    display flex
    flex-direction row
    width 100%
    justify-content center

    li
        display flex
        flex-direction column
        align-items center

    i
        display block
        width 100%
        text-align center
        font-size 1.8em
        font-style normal
        padding 12px

        +below(47.25rem)
            font-size 1.2em


.gallery-wrapper
    padding 0.3em
    display grid
    grid-template-columns repeat(auto-fit, minmax(200px, 1fr))
    grid-auto-flow dense
    grid-gap 5px

    .big
        grid-row span 3
        grid-column span 3

    .wide
        grid-column span 4
    
    .tall
        grid-row span 2

.t-page__about
    .article__content
        padding-top 7vh

        +below(47.25rem)
            padding-top 4vh


// links

.t-page__links
    a
        font-weight normal
        margin-bottom 10px
        display block
        color var(--link-color)

        &:hover
            color var(--code-inline-color)

    ul
        list-style-type none
        padding-left 30px
        display list-item
        flex-direction column

        li
            display flex

// entities
.t-page__entities
    table
        padding 0
        border-collapse collapse
        width 100%
        margin 1rem auto

        caption
            text-align left
            set-font-size 14px
            font-weight bold

        thead th
            background-color var(--background-color)
            color var(--text-color)
            border none

        tbody tr:nth-child(even)
            background-color var(--background-color)
            color var(--text-color)

        tbody tr:nth-child(odd)
            background-color var(--zebra-color)
            color var(--text-color)
        
        tbody tr th
            background-color var(--background-color)
            color var(--link-color)
            border none
            set-font-size(20px)

        tbody td
            border none
            padding 18px 0 18px 10px

        tbody tr > th
            padding 44px 0
            text-align left