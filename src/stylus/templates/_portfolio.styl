.portfolio
    &__container
        margin 0 auto
        max-width 1536px
        width 100%

        .wrap
            p
                font-family font-sans-serif
                set-font-size(16px)
                color var(--text-secondary-color)

    &__wrap
        width 100%
        margin 0 auto
        margin-top spacing(32px)
        padding 0 10px

    &__list
        display grid
        grid-template-columns 1fr 1fr 1fr 1fr
        gap spacing(32px)

        +below(47.25rem)
            grid-template-columns 1fr

    &__item
        width 100%
        margin 1vh 0
        border 1px solid #111
        border-radius 10px
        position relative
        overflow hidden

        a
            &:after
                content ""
                width 100%
                height 100%
                background linear-gradient(rgba(0,0,0,0), rgba(0,0,0,.4))
                position absolute
                top 0
                left 0
                z-index 3
                transition .4s
                opacity 0
            
            &:hover
                img
                    scale 1.1
                    transition .4s
                
                &:after,
                h3
                    opacity 1
                    transform translateY(0)
                    transition .4s

        figure
            margin 0
            border-radius 10px
            height 100%

            img
                border-radius 10px
                height 100%
                transition .4s

                +below(47.25rem)
                    height auto

        h3
            font-size 16px
            position absolute
            bottom 0
            z-index 4
            width 100%
            padding 12px
            border-bottom-left-radius 10px
            border-bottom-right-radius 10px
            opacity 0
            transform translateY(30px)
            transition .4s

            a
                color white

    