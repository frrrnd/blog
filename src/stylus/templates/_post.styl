.article
	&__container
		max-width wrap-max-width
		width 100%
		margin 0 auto
		position relative

	&__header
		margin-bottom 8vh

		h1
			margin-bottom 10px

		&--time
			color #666666
			font-weight normal
			font-size 1.6rem
			font-family monospace

			&:after
				content ""
				width 5px
				height 8px
				background-color white
				display inline-block
				margin-left 4px
				animation .8s blink infinite

	&__wrap
		max-width 900px
		width 100%
		margin 0 auto
		padding 2vh 0 2vh 0

		+below(47.25rem)
			center(wrap-max-width)
			padding 0 0 2vh 0

	&__summary
		max-width 780px
		width 100%
		margin 23px 0 0 0

		+below(47.25rem)
			center(wrap-max-width)

		.read-more
			background embedurl('/images/arrow-right.svg') no-repeat left
			padding 25px 0 25px 25px

	&__content,
	&__summary
		width 100%

		pre, code
			clear both
		
		code
			width 100%
			border-radius 5px
			padding 20px

		pre
			width 100%
			background-color transparent
			border-radius 5px

		p
			margin-bottom 6vh
			font-size 1.8rem

			code
				padding 0
				color coral
				font-size 2.4rem
				margin 0 5px

		a
			color link-color
			font-weight bold

			&[target='_blank']:after
				content embedurl('/images/external-link.svg')
				margin 0 3px 0 5px
				color white

		blockquote
			border-left 5px solid #ccc
			padding 20px
			width 100%
			background-color #333
			margin-left 0
			margin-bottom 6vh
			font-style italic

			p
				margin-bottom 0

		figcaption
			font-style italic
			color #ccc

			p
				font-size 14px


.navigation
	width 100%
	padding 2vh 0
	.wrap
		border-top 1px solid #111

.btn-back
	a
		background embedurl('/images/arrow-right.svg') no-repeat
		padding 25px
		display block
		margin 0 auto
		transform rotate(-180deg)
		max-width 50px
		width 100%
		text-indent -9999px