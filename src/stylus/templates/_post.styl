.article
	&__container
		max-width wrap-max-width
		width 100%
		margin 0 auto
		position relative

	&__header
		h1
			margin-bottom 10px

	&__wrap
		max-width 780px
		width 100%
		margin 0 auto
		padding 20vh 0

		+below(47.25rem)
			center(wrap-max-width)

	&__summary
		max-width 780px
		width 100%
		margin 21px auto 0

		+below(47.25rem)
			center(wrap-max-width)

	&__content,
	&__summary
		width 100%

		pre, code
			clear both
		
		code
			width 100%
			border-radius 5px
			padding 20px

		pre
			width 100%
			padding 16px

		p
			margin-bottom 6vh
			font-size 1.8rem

			code
				padding 0
				color coral
				font-size 2.4rem
				margin 0 5px

		a
			color link-color
			font-weight bold

			&[target='_blank']:after
				content embedurl('/images/external-link.svg')
				margin 0 3px 0 5px
				color white

		blockquote
			border-left 5px solid #ccc
			padding 20px
			width 100%
			background-color #333
			margin-left 0
			margin-bottom 6vh
			font-style italic

			p
				margin-bottom 0

		figcaption
			font-style italic
			color #ccc

			p
				font-size 14px
