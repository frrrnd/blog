.article
	&__container
		max-width wrap-max-width
		width 100%
		margin 0 auto
		position relative

	&__header
		margin-bottom 8vh
		max-width 75%
		width 100%

		h1
			margin-bottom 10px
			set-font-size 44px
			font-weight lighter

		&--time
			color var(--menu-color)
			font-weight normal
			set-font-size 15px
			font-family font-sans-serif

	&__wrap
		width 100%
		margin 0 auto
		padding 2vh 0 2vh 0

		+below(47.25rem)
			center(wrap-max-width)
			padding 0 0 2vh 0

	&__summary
		max-width 780px
		width 100%
		margin 23px 0 0 0

		+below(47.25rem)
			center(wrap-max-width)

		.read-more
			background embedurl('/images/arrow-right.svg') no-repeat left
			padding 25px 0 25px 25px

	&__content,
	&__summary
		width 100%

		pre, code
			clear both
		
		code
			width 100%
			border-radius 5px
			padding 20px

		pre
			width 100%
			background-color transparent!important
			border-radius 5px

		p
			margin-bottom 3vh
			set-font-size 18px
			font-family font-title

			code
				padding 0
				color var(--code-inline-color)
				set-font-size 18px
				margin 0 5px
				font-weight bold

		a
			font-weight bold

			&[target='_blank']:after
				content embedurl('/images/external-link.svg')
				margin 0 3px 0 5px
				opacity .4

		blockquote
			padding 20px
			width 100%
			margin-left 0
			margin-bottom 6vh
			font-style italic
			position relative
			
			&:before
				content "\201E"
				display inline-block
				position absolute
				left 10px
				top -50px
				set-font-size 80px
				color var(--menu-color)
				z-index -1

			p
				margin-bottom 0
				set-font-size 24px

		figcaption
			font-style italic
			color var(--menu-color)

			p
				set-font-size 14px


.navigation
	width 100%
	padding 2vh 0
	.wrap
		border-top 1px solid #111

.btn-back
	a
		background embedurl('/images/arrow-right.svg') no-repeat
		padding 25px
		display block
		margin 0 auto
		transform rotate(-180deg)
		max-width 50px
		width 100%
		text-indent -9999px

pre code
	padding 2em!important