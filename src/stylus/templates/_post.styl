.article
	&__container
		max-width wrap-max-width
		width 100%
		margin 0 auto
		position relative
		padding-left 31px

	&__header
		margin-bottom 4vh
		width 100%

		h1
			set-font-size 44px
			font-family font-sans-serif-bolder

	&__wrap
		max-width 800px
		width 100%
		margin 0 auto
		padding 2vh 0 2vh 0

		+below(47.25rem)
			center(wrap-max-width)
			padding 0 0 2vh 0

	&__summary
		max-width 780px
		width 100%
		margin 23px 0 0 0

		+below(47.25rem)
			center(wrap-max-width)

		.read-more
			background embedurl('/images/arrow-right.svg') no-repeat left
			padding 25px 0 25px 25px

	&__content,
	&__summary
		width 100%

		pre, code
			clear both
		
		code
			width 100%
			border-radius 5px
			padding 20px

		pre
			width 100%
			background-color transparent!important
			border-radius 5px

		p
			margin-bottom 5vh

			code
				padding 0 3px
				color var(--text-color)
				set-font-size 16px
				margin 0 5px
				border 1px solid var(--zebra-color)

		a
			font-weight bold
			font-family font-sans-serif-bolder

			&[target='_blank']:after
				content embedurl('/images/external-link.svg')
				margin 0 3px 0 5px
				opacity .4

		h2
			margin-bottom 10px
			color var(--light-meta)
			font-family font-sans-serif-bolder
			set-font-size 32px

		img[src$='#ilustra']
			display block
			margin 0 auto
			width 21%
			max-width 100%

		blockquote
			padding 20px
			width 100%
			margin-left 0
			margin-bottom 6vh
			position relative
			
			&:before
				content ""
				display inline-block
				position absolute
				left 0
				top 0
				z-index 0
				width 4px
				height 100%
				background-color var(--link-color)

			p
				margin-bottom 0
				set-font-size 20px

		figcaption
			font-style italic
			color var(--menu-color)

			p
				set-font-size 14px

		&--tags
			display inline-block
			padding-left 0
			font-family font-sans-serif
			margin-left 5px

			li
				display inline-block
				set-font-size 14px

				&:not(:last-child):after
					content ""
					color var(--light-meta)

				a
					color var(--light-meta)

					&:hover
						color var(--link-color)

	&__footer
		display flex
		flex-direction row
		justify-content center
		border-top 1px solid rgba(255,255,255,.05)
		padding-top 21px

		a
			display block
			margin 0 auto
			padding 12px
			set-font-size 18px


.navigation
	width 100%
	padding 2vh 0
	.wrap
		border-top 1px solid #111

.btn-back
	a
		background embedurl('/images/arrow-right.svg') no-repeat
		padding 25px
		display block
		margin 0 auto
		transform rotate(-180deg)
		max-width 50px
		width 100%
		text-indent -9999px

pre code
	padding 2em!important


.dark-theme .article__content img[src$='#ilustra']
	filter contrast(0) brightness(1.6)

.light-theme .article__content img[src$='#ilustra']
	filter contrast(1)