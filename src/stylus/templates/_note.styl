.note
    &__wrapper
        padding spacing(120px) spacing(80px) 0 0

        +below(break)
            padding 0

    &__item
        margin-bottom spacing(48px)

    &__content
        a
            text-decoration underline
        
        figure
            max-width 100%
            margin 0 0 spacing(24px) 0

        img
            max-width 100%
            width 100%
            height auto
            display block
            margin 0 0 spacing(24px) 0
            border-radius 5px

        h2, h3, h4, h5
            margin 0 0 spacing(8px) 0

        p, iframe
            margin-bottom spacing(24px)