
wrap-max-width = 1280px

html
	box-sizing border-box
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
	font-size 62.5%

*,
*:before,
*:after
	box-sizing border-box

::selection
	background-color mineviolet
	color black

html,
body
	min-height 100%

body
	background-color background-site-color
	color text-site-color
	margin 0
	font-family font-text
	font-size 1.6rem

.container
	width 100%
	min-height 100%
	position relative
	z-index 1

.wrap
	max-width wrap-max-width
	width 100%
	margin 0 auto
	padding 21px

	+below(1024px)
		padding 10px

.wrap-notes
	max-width 800px
	width 100%
	margin 0 auto

	+below(1024px)
		padding 22px

img
	max-width 100%
	height auto

.main
	padding-top 10vh
	position relative

.a-wrapflex
	max-width wrap-max-width
	width 100%
	margin 0 auto
	display flex
	flex-direction row
		
		+below(47.25rem)
			max-width 100%

	+below(47.25rem)
		flex-direction column

.align-center
	display block
	text-align center
	margin 0
	padding 0
	width 100%

.align-right
	text-align right