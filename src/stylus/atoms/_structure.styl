
wrap-max-width = 1080px

/*
:root
	--space-xxs  4px
	--space-xs   8px
	--space-sm   12px
	--space-md   20px
	--space-lg   32px
	--space-xl   52px
	--space-xxl  84px
*/
html
	box-sizing border-box
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
	font-size 100%

*,
*:before,
*:after
	box-sizing border-box

::selection
	background-color hsl(81, 95%, 57%)
	color #333

html,
body
	min-height 100%
	background-color var(--background-color)

body
	color var(--text-color)
	margin 0
	font-family font-serif
	set-font-size 16px
	text-rendering optimizelegibility
	-moz-osx-font-smoothing grayscale
  	-webkit-font-smoothing antialiased !important
  	-moz-font-smoothing antialiased

.container
	width 100%
	min-height 100%
	position relative
	z-index 1

.wrap
	max-width wrap-max-width
	width 100%
	margin 0 auto
	padding 21px

	+below(47.25rem)
		padding 32px

.wrap-notes
	max-width 800px
	width 100%
	margin 0 auto

	+below(47.25rem)
		padding 22px

img
	max-width 100%
	height auto

.main
	padding-top 10vh
	position relative

.a-wrapflex
	max-width wrap-max-width
	width 100%
	margin 0 auto
	display flex
	flex-direction row

	+below(47.25rem)
		flex-direction column

.align-center
	display block
	text-align center
	margin 0
	padding 0
	width 100%

.align-right
	text-align right