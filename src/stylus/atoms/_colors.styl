// Theme

:root
    --light-bg: #101010
    --light-text: #FFFFFF
    --light-accent: #A181FF
    --light-meta: #646A83
    --light-invert: #89A91F
    --light-zebra-color: #CCC


// Use this variables across the website

html
    --background-color: var(--light-bg)
    --text-color: var(--light-text)
    --logo-color: var(--light-accent)
    --link-color: var(--light-accent)
    --title-color: var(--light-text)
    --background-accent-color: var(--light-accent) 
    --menu-color: var(--light-meta)
    --code-inline-color: var(--light-invert)
    --zebra-color: var(--light-zebra-color)