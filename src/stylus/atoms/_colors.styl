// Theme

:root
    --bg-color: #101010
    --text-color: #E5E5E5
    --text-secondary-color: #A0A0A0
    --accent-color: #A181FF
    --meta-color: #A0A0A0
    --invert-color: #89A91F
    --zebra-color: #CCC
    --divider-color: #262626


// Use this variables across the website

html
    --background-color: var(--bg-color)
    --text-color: var(--text-color)
    --logo-color: var(--accent-color)
    --link-color: var(--accent-color)
    --title-color: var(--text-color)
    --background-accent-color: var(--accent-color) 
    --menu-color: var(--meta-color)
    --code-inline-color: var(--invert-color)
    --zebra-color: var(--zebra-color)