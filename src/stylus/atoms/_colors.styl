// Dark Theme

:root
    --dark-bg: #161616
    --dark-text: #e3e3e3
    --dark-accent: #6F5BE4
    --dark-meta: #8c90a3
    --dark-invert: #ACCC43
    --dark-zebra-color: #333

// Light Theme

:root
    --light-bg: #F9FAFB
    --light-text: #05042E
    --light-accent: #2F4DEE
    --light-meta: #646A83
    --light-invert: #89A91F
    --light-zebra-color: #CCC


// Use this variables across the website

@media (prefers-color-scheme: light)
    html
        --background-color: var(--light-bg)
        --text-color: var(--light-text)
        --logo-color: var(--light-accent)
        --link-color: var(--light-accent)
        --title-color: var(--light-text)
        --background-accent-color: var(--light-accent)
        --menu-color: var(--light-meta)
        --meta-color: var(--light-meta)
        --code-inline-color: var(--light-invert)
        --zebra-color: var(--light-zebra-color)
    
    html.dark-theme
        --background-color: var(--dark-bg)
        --text-color: var(--dark-text)
        --logo-color: var(--dark-accent)
        --link-color: var(--dark-accent)
        --title-color: var(--dark-text)
        --background-accent-color: var(--dark-accent) 
        --menu-color: var(--dark-meta)
        --code-inline-color: var(--dark-invert)
        --zebra-color: var(--dark-zebra-color)

@media (prefers-color-scheme: dark)
    html
        --background-color: var(--dark-bg)
        --text-color: var(--dark-text)
        --logo-color: var(--dark-accent)
        --link-color: var(--dark-accent)
        --title-color: var(--dark-text)
        --background-accent-color: var(--dark-accent) 
        --menu-color: var(--dark-meta)
        --meta-color: var(--light-meta)
        --code-inline-color: var(--dark-invert)
        --zebra-color: var(--dark-zebra-color)

    html.light-theme
        --background-color: var(--light-bg)
        --text-color: var(--light-text)
        --logo-color: var(--light-accent)
        --link-color: var(--light-accent)
        --title-color: var(--light-text)
        --background-accent-color: var(--light-accent) 
        --menu-color: var(--light-meta)
        --code-inline-color: var(--light-invert)
        --zebra-color: var(--light-zebra-color)