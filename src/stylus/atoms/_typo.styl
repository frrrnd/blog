@import url('https://rsms.me/inter/inter.css')

@font-face
	font-family 'bluu_nextbold'
	src url('../fonts/bluunext-bold-webfont.woff') format('woff')
	font-weight normal
	font-style normal

font-title = 'bluu_nextbold'
font-text = 'Inter', sans-serif
font-link = font-text

@supports(font-variation-settings: normal)
	html
		font-family 'Inter var', sans-serif

h1,
h2,
h3,
h4,
h5,
h6
	margin 0
	font-family font-title

h1
	font-size 5rem
	line-height 120%
	+below(47.25rem)
		font-size 3rem

h2
	font-size 4rem

p
	font-family font-text
	font-size 1.6rem
	line-height 140%
	margin 0

a 
	text-decoration none
	outline none
	color link-color
	transition .4s

	&:hover
		opacity .5
		transition .4s