[data-scroll]
    transition opacity 2s

[data-scroll="in"]
    opacity 1

[data-scroll="out"]
    opacity 0

.makeMeAppear
    animation makeMeAppear .4s ease .8s forwards

@keyframes makeMeAppear
    0%
        opacity 0
    100%
        opacity 1

@keyframes imageGlitch 
    0% 
        transform translate3d(0, 0, 0)
        opacity 1
    20% 
        transform translate3d(0, 0, 0)
        opacity 0.3
    24% 
        transform translate3d(5px, 4px, 0)
        opacity 1
    28% 
        transform translate3d(0, 0, 0)
    60% 
        transform translate3d(0, 0, 0)
    64% 
        transform translate3d(-4px, -3px, 0)
    68% 
        transform translate3d(0, 0, 0)
    70% 
        opacity 1
        transform translate3d(0, 0, 0)
    74% 
        opacity 0.3
        transform translate3d(6px, -6px, 0)
    78% 
        opacity 1
        transform translate3d(0, 0, 0)
    100% 
        transform translate3d(0, 0, 0)


// blink effect

@keyframes blink
    0%
        background-color #222
    50%
        background-color background-site-color
    100%
        background-color #222

// zomg
@keyframes zomg
    0%
        color #9400D3
    16%
        color #0000FF
    32%
        color #00FF00
    48%
        color #FFFF00
    64%
        color #FF7F00
    80%
        color #FF0000