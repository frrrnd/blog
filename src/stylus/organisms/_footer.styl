#button
	opacity 0
	visibility hidden
	transition .4s
	position fixed
	bottom 5%
	right 5%
	z-index 50

#button.show
	opacity 1
	visibility visible
	transition .4s

#button svg
	max-width 40px

/*
* Footer component
*/

.footer
	width 100%
	padding 2vw 0 4vw 0
	font-family font-title
	background-color #080808
	
	.wrap
		padding 10px 0
		display flex
		flex-direction row

		+below(756px)
			flex-direction column

	&-bottom
		width 100%
		text-align center
		color #666
		padding 2em 0 0 0
		
		p
			font-size 1.2rem

		a
			color inherit
			border-bottom none

.footer-infos
	width 100%

	.col
		display flex
		flex-direction column
		flex 1 1 auto

		h4
			font-size 3.2rem
			width 50%
			margin-bottom 22px
			text-align right
			color #666

			+below(756px)
				width 100%
				padding 12px

		ul
			list-style-type none

			li
				width 100%
				display inline-block
				margin-bottom 12px
			
		a
			color white

.txt-r
	text-align right
	width 50%
	font-size 2rem

	+below(756px)
		width 100%
		padding 12px