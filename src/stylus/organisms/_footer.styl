.footer
	width 100%
	position relative
	padding-top 6em
	
	.wrap
		padding 0 21px
		display flex
		flex-direction row

.footer-infos
	width 100%
	set-font-size 14px

	.col
		display flex
		flex-direction column
		padding 0
		text-align left
		margin-top 31px

		&:before
			content ""
			width 30px
			height 1px
			background-color rgba(255,255,255,.1)
			margin-left 31px

		ul
			list-style-type none
			padding-left 31px
			padding-bottom 21px

			+below(47.25rem)
				padding-left 0

			li
				display inline-block
				color var(--menu-color)
				font-family font-sans-serif
				margin 0 21px

				&:nth-child(1)
					margin-left 0
			
		a
			font-family font-sans-serif
			color var(--menu-color)
			

			&:hover
				color var(--link-color)
				

.atlas-logo
	display block
	margin 0 auto
	
	svg path
		fill var(--menu-color)