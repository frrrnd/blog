#button
	opacity 0
	visibility hidden
	transition .4s
	position fixed
	bottom 12%
	right 5%
	z-index 50

#button.show
	opacity 1
	visibility visible
	transition .4s

#button svg
	max-width 40px

/*
* Footer component
*/

.footer
	width 100%
	padding 2vw 0 4vw 0
	background-color #080808
	
	.wrap
		padding 10px 0
		display flex
		flex-direction row

		+below(756px)
			flex-direction column

.footer-infos
	width 100%
	font-size 1.2rem
	text-transform uppercase
	letter-spacing 2px

	.wrap
		border-bottom 2px solid #222

	.col
		display flex
		flex-direction column
		flex 1 1 auto
		justify-content flex-end

		&:last-child
			text-align right
			font-size 1rem
			color #666

		h4
			font-size 3.2rem
			width 50%
			margin-bottom 22px
			text-align right
			color white

			+below(756px)
				width 100%
				padding 12px

		ul
			list-style-type none

			li
				width 100%
				display inline-block
				margin-bottom 28px
			
		a
			font-family font-text

.txt-r
	text-align right
	width 50%
	font-size 2rem

	+below(756px)
		width 100%
		padding 12px