.top-nav
	ul
		list-style-type none
		width 100%
		margin 0
		padding 0
		display flex
		flex-direction row
		justify-content flex-end
		font-size 1.6rem
		
		+below(47.25rem)
			flex-direction row
			width 100%

		li
			display inline-block
			margin 0 25px

			&:last-child
				margin-right 0
				
			a
				text-decoration none
				position relative