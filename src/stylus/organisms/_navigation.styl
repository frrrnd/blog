.top-nav
	width 100%
	display flex
	flex-direction row
	align-items center
	
	ul
		list-style-type none
		width 100%
		margin 0
		padding 0
		display flex
		flex-direction row
		justify-content flex-end
		align-items center
		set-font-size 16px
		
		+below(47.25rem)
			flex-direction row
			width 100%
			justify-content center

		li
			display inline-block
			margin 0 25px
			font-family font-text
			font-weight 100
			color var(--menu-color)

			&:last-child
				margin-right 0
				
			a
				text-decoration none
				position relative
				color inherit
				transition .4s

				&:hover
					color var(--code-inline-color)
					transition .4s
				

.theme-icon
	margin 0 auto
	display block
	width 16px
	height 32px
	background url('../images/icons-theme.png') no-repeat
	transition .4s

.light-theme .theme-icon
	background-position 0 8px

.dark-theme .theme-icon
	background-position 0 -25px

.sw
	width 32px
	height 32px
	display block
	cursor pointer