.navigation
	width 100%
	display flex
	flex-direction row
	
	ul
		list-style-type none
		width 100%
		margin 0
		padding 0
		display flex
		flex-direction row
		justify-content flex-end
		set-font-size 16px

		+below(739px)
			justify-content flex-start

		li
			display inline-block
			margin-right spacing(32px)
			font-family font-sans-serif
			color var(--menu-color)
			text-transform uppercase
			font-weight bold
			set-font-size(14px)
			

			&:first-child
				margin-left 0
				
			a
				text-decoration none
				position relative
				color inherit
				transition .4s

				&:hover
					color var(--link-color)
					transition .4s