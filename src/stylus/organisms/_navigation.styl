.top-nav
	width 100%
	display flex
	flex-direction row
	
	ul
		list-style-type none
		width 100%
		margin 0
		padding 0
		display flex
		flex-direction row
		justify-content flex-end
		set-font-size 16px
		margin-left 31px
		
		+below(47.25rem)
			flex-direction row
			width 100%
			align-items flex-start
			margin-left 0

		li
			display inline-block
			margin 0 21px
			font-family font-sans-serif
			font-weight 500
			color var(--menu-color)
			

			&:first-child
				margin-left 0
				
			a
				text-decoration none
				position relative
				color inherit
				transition .4s

				&:hover
					color var(--link-color)
					transition .4s
				

.theme-icon
	margin 0 auto
	display block
	width 16px
	height 32px
	background url('../images/icons-theme.svg') no-repeat
	transition .4s

.light-theme .theme-icon
	background-position 0 8px

.dark-theme .theme-icon
	background-position 0 -25px

.sw
	width 32px
	height 32px
	display block
	cursor pointer
	border none
	background-color transparent