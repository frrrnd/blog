.header
	padding spacing(104px) 0 0 0

	a
		display inline-block
		margin-bottom spacing(21px)

		img
			max-width 60px
			width 100%
			border-radius 100%
			transition .4s

			&:hover
				opacity .6
				transition .4s
	h1
		padding-bottom spacing(16px)
		set-font-size(18px)
		line-height 1.6