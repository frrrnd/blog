.header
	width 100%
	padding-top 2vw
	font-family font-title

	.wrap
		display flex
		flex-direction row
		align-items center
		
		+below(47.25rem)
			align-items flex-start
			flex-direction row
	
	&__logo
		display flex
		flex-grow 1

		+below(47.25rem)
			width 100%
			align-items center
			justify-content flex-start
			margin-bottom 21px
	
	&__name
		display flex
		flex-grow 2
		font-weight bold

		+below(47.25rem)
			display none
		
	
	&__menu
		display flex
		flex-grow 3
		flex-direction row
		justify-content flex-end

		+below(64em)
			width 100%
			justify-content center

.logo--detail
	fill var(--logo-color)

.logo--letter
	fill var(--text-color)