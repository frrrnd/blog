.header
	width 100%
	padding-top 4vw
	font-family font-sans-serif

	.wrap
		display flex
		flex-direction row
		align-items center
	
	&__logo
		display flex
		flex-grow 1
		align-items center

		a
			display flex
			flex-direction row
			align-items center
		
		svg
			margin-right 12px
	
	&__name
		display flex
		flex-grow 2
		background linear-gradient(90deg, #6350D1 0%, #D993D6 100%);
		-webkit-background-clip text
		-webkit-text-fill-color transparent
		background-clip text-align
		text-fill-color transparent
		set-font-size 28px
	
	&__menu
		display flex
		flex-grow 3
		flex-direction row
		justify-content flex-end

		+below(47.25rem)
			width 100%
			justify-content center

.logo--detail
	fill var(--logo-color)

.logo--letter
	fill var(--text-color)