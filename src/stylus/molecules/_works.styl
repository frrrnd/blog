@import '../atoms/_animations'


.works
	width 100%
	padding-top 3vw

.grid-container
	display grid
	grid-template-columns 1fr 1fr 1fr
	grid-template-rows 1fr 1fr
	grid-template-areas "slot-1 slot-2 slot-3" "slot-4 slot-5 slot-6"
	grid-gap 60px
	max-width wrap-max-width
	width 100%
	margin 0 auto

	+below(47.25rem)
		display grid
		grid-template-columns 1fr
		grid-template-rows 1fr 1fr 1fr 1fr 1fr 1fr
		grid-template-areas "slot-1" "slot-2" "slot-3" "slot-4" "slot-5" "slot-6"
		grid-gap 30px

.slot
	position relative
	padding 0
	animation fadeIn 1s forwards

	+below(47.25rem)
		width 100%
		padding 0

	a
		display block
		width 100%
		margin 0 auto
		position relative

		+below(47.25rem)
			max-width 80%

		&:hover
			.overlay
				opacity 1
				transition .4s


	figure
		width 100%
		margin 0 auto

	img
		display block
		margin 0 auto
		transition .4s
		max-width 100%

	.overlay
		background-color rgba(0,0,0,.7)
		width 100%
		height 100%
		position absolute
		left 0
		top 0
		opacity 0
		transition .4s

	h4
		text-align center
		position absolute
		top 50%
		left 0
		right 0
		color white

.slot:nth-child(1)
	grid-area slot-1

.slot:nth-child(2)
	grid-area slot-2

.slot:nth-child(3)
	grid-area slot-3

.slot:nth-child(4)
	grid-area slot-4

.slot:nth-child(5)
	grid-area slot-5

.slot:nth-child(6)
	grid-area slot-6



@keyframes fadeIn
	0%
		opacity 0
	100%
		opacity 1

.works
	a[target='_blank']
		&:after
			content ""
			display none

.go-dribbble
	max-width 100%
	width 100%
	margin 5vh auto
	text-align center
	margin-bottom 4vh

.rotate
	animation 5s rotate ease infinite

@keyframes rotate
	100%
		transform rotate(-360deg)

// Projects

.projects,
.other-projects

	&__list
		list-style-type none
		padding-left 0
		width 100%
		max-width 100%
		margin 0 auto
		transition .4s

		&:hover
			transition .4s

			li:not(:hover)
				opacity .5
				transition .4s
				
				h4
					-webkit-text-stroke 1px #666
					-webkit-text-fill-color transparent
					font-weight normal
					transition .4s
				
				p, em
					color #222
					transition .4s



		h4
			font-size 2.8em
			text-transform lowercase
			transition .4s
			position relative
			z-index 9999
		
		p,
		em
			transition .4s

		em
			font-style normal
			display inline-block
			color mineviolet

		img
			position absolute
			top 0
			right 0
			opacity 0
			transition .4s
			z-index 99

		li
			position relative
			transition .4s
			z-index 9999

			&:hover
				h4,
				p,
				em
					transform translateX(15px)
					transition .4s

		a
			padding 53px 0
			display block

			&:hover
				opacity 1
				color white

				img
					opacity 1
					transition .4s

		a[href="#!"]
			cursor default

.other-projects
	padding-top 10em