@import '../atoms/_animations'


.works
	width 100%
	padding-top 3vw

.grid-container
	display grid
	grid-template-columns 1fr
	grid-template-rows 1fr 1fr 1fr 1fr
	grid-template-areas "slot-1" "slot-2" "slot-3" "slot-4" "slot-5" "slot-6" "slot-7" "slot-8"
	grid-gap 50px

.slot
	position relative
	padding 20vh 0

	+below(47.25rem)
		width 100%
		padding 0

	a
		display block
		max-width 50%
		width 100%
		margin 0 auto
		position relative

		+below(47.25rem)
			max-width 80%

		&:hover
			.overlay
				opacity 1
				transition .4s


	figure
		width 100%
		margin 0 auto

	img
		display block
		margin 0 auto
		transition .4s
		max-width 100%

	.overlay
		background-color rgba(0,0,0,.7)
		width 100%
		height 100%
		position absolute
		left 0
		top 0
		opacity 0
		transition .4s

	h3
		text-align center
		position absolute
		top 50%
		left 0
		right 0
		font-size 3rem
		color white

.slot:nth-child(1)
	grid-area slot-1

.slot:nth-child(2)
	grid-area slot-2

.slot:nth-child(3)
	grid-area slot-3

.slot:nth-child(4)
	grid-area slot-4

.slot:nth-child(5)
	grid-area slot-5

.slot:nth-child(6)
	grid-area slot-6

.slot:nth-child(7)
	grid-area slot-7

.slot:nth-child(8)
	grid-area slot-8

.see-more--dribbble
	-webkit-text-stroke 1px rgba(255, 255, 255, 1)
	-webkit-text-fill-color transparent
	font-size 4rem
	display block
	margin 0 auto
	text-align center