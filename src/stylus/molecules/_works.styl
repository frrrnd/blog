@import '../atoms/_animations'


.works
	width 100%
	padding-top 3vw

.grid-container
	display grid
	grid-template-columns 1fr 1fr 1fr
	grid-template-rows 1fr 1fr 1fr 1fr
	grid-template-areas "slot-1 slot-2 slot-3" "slot-4 slot-5 slot-6" "slot-7 slot-8 slot-9" "slot-10 slot-11 slot-12" "slot-13 slot-14 slot-15" "slot-16 slot-17 slot-18"
	grid-gap 30px
	max-width wrap-max-width
	width 100%
	margin 0 auto

	+below(47.25rem)
		display grid
		grid-template-columns 1fr
		grid-template-rows 1fr 1fr 1fr 1fr 1fr 1fr
		grid-template-areas "slot-1" "slot-2" "slot-3" "slot-4" "slot-5" "slot-6" "slot-7" "slot-8" "slot-9" "slot-10" "slot-11" "slot-12" "slot-13" "slot-14" "slot-15" "slot-16" "slot-17" "slot-18"
		grid-gap 30px

.slot
	position relative
	padding 0
	animation fadeIn 1s forwards

	+below(47.25rem)
		width 100%
		padding 0

	a
		display block
		width 100%
		margin 0 auto
		position relative

		+below(47.25rem)
			max-width 80%

		&:hover
			.overlay
				opacity 1
				transition .4s


	figure
		width 100%
		margin 0 auto

	img
		display block
		margin 0 auto
		transition .4s
		max-width 100%

	.overlay
		background-color rgba(0,0,0,.7)
		width 100%
		height 100%
		position absolute
		left 0
		top 0
		opacity 0
		transition .4s

	h3
		text-align center
		position absolute
		top 50%
		left 0
		right 0
		font-size 3rem
		color white

.slot:nth-child(1)
	grid-area slot-1

.slot:nth-child(2)
	grid-area slot-2

.slot:nth-child(3)
	grid-area slot-3

.slot:nth-child(4)
	grid-area slot-4

.slot:nth-child(5)
	grid-area slot-5

.slot:nth-child(6)
	grid-area slot-6

.slot:nth-child(7)
	grid-area slot-7

.slot:nth-child(8)
	grid-area slot-8

.see-more--dribbble
	font-size 2rem
	display block
	margin 0 auto 2em
	text-align center
	
	a
		color white


@keyframes fadeIn
	0%
		opacity 0
	100%
		opacity 1

.works
	a[target='_blank']
		&:after
			content ""
			display none

.go-dribbble
	max-width 100%
	width 100%
	margin 0 auto
	text-align right
	margin-bottom 4vh

	.read-more
		background embedurl('/images/arrow-right.svg') no-repeat left
		padding 25px 60px 25px 25px

	+below(47.25rem)
		center(wrap-max-width)