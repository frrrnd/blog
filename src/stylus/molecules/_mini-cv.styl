.static--list
    list-style-type none
    padding-left 0
    width 100%
    max-width 90%
    margin 0 auto
        
    p
        color #666

    h4
        font-size 2em
        text-transform lowercase

    li
        position relative


.mini-cv
    width 100%
    //padding 21px

    +below(47.25rem)
        padding 0

    &__title
        margin-bottom 2vh

    &__timeline
        width 100%
        display flex

        +below(47.25rem)
            flex-direction column

        li
            padding 0 0 53px 0

.half
    max-width 100%
    width 100%
    display flex
    flex-direction column
    
    +below(47.25rem)
            max-width 100%

    h2
        margin-bottom 12px

    h3
        set-font-size 24px
        margin-bottom 20px
        opacity .7