.hero
	width 100%
	min-height 55vmin
	padding 0
	height 100%
	display flex
	align-items center
	
	.wrap
		position relative
	
	p
		position relative
		font-family font-sans-serif
		set-font-size 20px
		color var(--link-color)

	h1
		width 50%
		position relative
		margin-bottom 21px
		set-font-size 42px
		font-family font-sans-serif

		+below(47.25rem)
			set-font-size 26px
			width 100%
			padding 0