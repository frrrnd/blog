.hero
	width 100%
	height 100%
	display flex
	align-items center
	
	.wrap
		position relative
		padding-top 0
	
	p
		position relative
		font-family font-sans-serif
		set-font-size 20px
		color var(--link-color)

	h2
		width 100%
		position relative
		set-font-size 22px
		font-family font-sans-serif
		line-height 1.6
		margin-left 31px

		a
			color var(--light-meta)

		+below(47.25rem)
			width 100%
			margin-left 0

.notes__home
	padding-left 31px

	h4
		color var(--menu-color)
		text-transform uppercase
		letter-spacing 2px
		set-font-size 12px
		margin-bottom 2vw

	h3
		set-font-size 16px

.btn
	background-color #1a1a1a
	display block
	width max-content
	padding 10px 15px
	border-radius 5px
	margin 20px 0

	&:hover
			color var(--link-color)
			transition .4s

			svg
				path
					fill var(--link-color)
					transition .4s

	svg
		max-width 16px
		margin-right 10px
		
		path
			fill var(--dark-meta)
			transition .4s

.btn-group
	width 100%
	display flex
	padding 0 31px

	+below(47.25rem)
		padding 0

	a
		margin-right 21px
		color var(--dark-meta)
		transition .4s
		display flex
		align-items center