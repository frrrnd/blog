@import '../atoms/_glitch'

.hero
	width 100%
	min-height 45vh
	padding 20vh 0
	height 100%
	display flex
	align-items center
	background embedurl('/images/hero.jpg') no-repeat
	background-size cover
	background-position top left

	+below(47.25rem)
		padding 0
	
	.wrap
		position relative
	
	p
		position relative
		font-family font-title
		font-size 1.6rem
		a
			color minegray

	h1
		width 75%
		position relative
		margin-bottom 21px
		hyphens auto
		font-size 5rem
		font-weight normal

		+below(47.25rem)
			font-size 3rem
			width 100%

		span
			color white