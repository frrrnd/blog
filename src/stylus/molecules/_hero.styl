.hero
	h2
		padding-bottom spacing(24px)
		set-font-size(22px)
		line-height 1.6

		strong
			background radial-gradient(circle, #FF81A6 0%, #A181FF 50%)
			-webkit-background-clip text
			-webkit-text-fill-color transparent
			background-clip text
			text-fill-color transparent
			animation textShine 3s ease-in-out infinite alternate
			background-size 200% auto

	h3
		set-font-size(18px)
	
	h4
		font-weight 600
		letter-spacing 1px
		text-transform uppercase
		margin-bottom spacing(24px)
		color #7A7A7A
		set-font-size(12px)

	a:hover
		color var(--link-color)

.btn-group
	display flex
	align-items center
	margin-bottom spacing(64px)

	a
		margin-right spacing(24px)
		text-decoration none
		color var(--text-color)
		background-color #171717
		padding spacing(16px)
		border-radius 16px
		font-weight 500
		display flex
		align-items center
		transition .4s

		&:hover
			background-color darken(#171717, 3%)
			transition .4s

		svg
			margin-right spacing(8px)

.section-home
	margin-bottom spacing(64px)
	
	article, li
		margin-bottom spacing(16px)

	li
		set-font-size(18px)
	
	ul
		padding-left 0
		list-style none

	article h3, li
		&:before
			content "\2013"
			margin-right spacing(8px)
			opacity .1

.now
	li a
		text-decoration underline

.shiny-btn
	position relative
	overflow hidden

	&:after
		content ""
		position absolute
		top calc(var(--y, 0) * 1px - 50px)
		left calc(var(--x, 0) * 1px - 50px)
		width 100px
		height 100px
		background radial-gradient(#3a3a3a, #33333300 80%)
		opacity 0
		transition opacity .2s

	&:hover
		&:after
			opacity .4

@keyframes textShine
	0%
		background-position 0% 50%
	100%
		background-position 100% 50%