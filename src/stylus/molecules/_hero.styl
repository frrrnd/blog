.hero
	h2
		padding-bottom spacing(24px)
		set-font-size(20px)
		line-height 1.6

	h3, h4
		set-font-size(16px)
	
	h4
		font-weight 600
		margin-bottom spacing(24px)

.btn-group
	display flex
	align-items center
	margin-bottom spacing(64px)

	a
		margin-right spacing(24px)
		text-decoration none
		color var(--link-color)
		background-color #EEF1FA
		padding spacing(16px)
		border-radius 16px
		font-weight 500
		display flex
		align-items center
		transition .4s

		&:hover
			background-color darken(#EEF1FA, 3%)
			transition .4s

		svg
			margin-right spacing(8px)

.section-home
	margin-bottom spacing(64px)
	
	article, li
		margin-bottom spacing(16px)

	article h3, li
		&:before
			content "\2022"
			margin-right spacing(8px)
			color var(--link-color)

	li
		set-font-size(16px)
	
	ul
		padding-left 0
		list-style none

.shiny-btn
	position relative
	overflow hidden

	&:after
		content ""
		position absolute
		top calc(var(--y, 0) * 1px - 50px)
		left calc(var(--x, 0) * 1px - 50px)
		width 100px
		height 100px
		background radial-gradient(white, #eef1fa00 80%)
		opacity 0
		transition opacity .2s

	&:hover
		&:after
			opacity .4