.hero
	width 100%
	height 100%
	display flex
	align-items center
	
	.wrap
		position relative
		padding-top 0
	
	p
		position relative
		font-family font-sans-serif
		set-font-size 20px
		color var(--link-color)

	h2
		width 100%
		position relative
		margin-bottom 21px
		set-font-size 22px
		font-family font-sans-serif
		line-height 1.6
		margin-left 31px

		a
			color var(--menu-color)

		+below(47.25rem)
			width 100%
			margin-left 0

.notes__home
	padding-left 31px

	h4
		color var(--menu-color)
		text-transform uppercase
		letter-spacing 2px
		set-font-size 12px
		margin-bottom 2vw

	h3
		set-font-size 16px