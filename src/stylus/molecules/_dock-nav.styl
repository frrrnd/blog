.dock-component
    position fixed
    bottom 30px
    left 0
    right 0
    margin 0 auto
    max-width 310px
    width 100%
    z-index 10
    border-radius 15px

    nav
        width 100%
        margin 0 auto
        display flex
        flex-direction row
        padding 5px
        background linear-gradient(180deg, rgba(37, 37, 37, 0) 0%, #161616 100%)
        backdrop-filter blur(25px)
        -webkit-backdrop-filter blur(25px)
        border-radius 15px
        border 2px solid #0d0d0d
        box-shadow 0px 1px 5px #101010, inset 0 -1px 1px #121212, inset 0 1px 1px #343434

        ul
            list-style-type none
            width 100%
            display flex
            flex-direction row
            padding 0
            margin 0
            justify-content center
        
        li
            display flex
            flex 1
            justify-content center
            align-items center
            position relative

        a
            width 100%
            margin 10px 5px
            padding 8px 0
            display flex
            background linear-gradient(180deg, rgba(14, 14, 14, 0) 0%, #141414 100%)
            justify-content center
            align-items center
            box-shadow 0 1px 0 0 rgba(0, 0, 0, 0.2), 0 -1px 0 0 #242424,
        1px 0 0 0 rgba(0, 0, 0, 0.2), -1px 0 0 0 rgba(0, 0, 0, 0.2)
            border-radius 10px
            backface-visibility hidden
            will-change transform
            transition .4s
            position relative

            &.is-active:after
                background-color white

            &.is-active svg path
                fill white

            &:after
                content ""
                width 8px
                height 3px
                background-color transparent
                border-radius 4px
                position absolute
                bottom 0
                right auto
                left auto
                transition .4s

            &:before
                content attr(data-tooltip)
                position absolute
                top 0
                left auto
                right auto
                transform translateY(-150%)
                opacity 0
                visibility hidden
                transition .4s
                color white
                font-size 12px
                padding 5px 10px
                border-radius 5px
                background-color #1a1a1a
                border 1px solid #0f0f0f
                box-shadow inset 0 -1px 0 #000000, inset 0 1px 0 rgba(60,60,60,0.25)
                will-change transform

            svg path
                transition .4s

            &:hover
                scale 1.2
                transition .4s
                backface-visibility hidden

                svg path
                    fill white
                    transition .4s
                
                &:before
                    opacity 1
                    visibility visible
                    transition .4s