.minibio
    background-color mineviolet

.minibio, .about
    a
        color white
        font-weight bold
        border-bottom 2px solid white
        width max-content
        transition .4s

        &:hover
            border-bottom-color rgba(255, 255, 255, .2)
            transition .4s

    .wrap
        display flex
        width 100%
        flex-direction row

        +below(64em)
            flex-direction column
    
    .half
        flex 1
        padding 4em 0
        justify-content center

        +below(64em)
            padding 2em 0

        p
            margin-bottom 32px

        img
            max-width 400px
            align-self end
        
        &--left
            ul
                list-style-type none
                font-family font-title

                li
                    font-size 2.8em

                    strong
                        color black
                        -webkit-text-stroke 1px white
                        -webkit-text-fill-color transparent
                        font-weight normal
                        position relative

@keyframes space
    0%
        opacity 0
        transform translateY(-20px)
    100%
        opacity 1
        transform translateY(0)

.space-animation
    opacity 0
    animation 1s space ease forwards

    &:nth-child(1)
        animation-delay .5s
    
    &:nth-child(2)
        animation-delay 1s
    
    &:nth-child(3)
        animation-delay 2s


.about
    .half
        strong
            font-family font-title
            font-size 2.5rem
            color mineviolet