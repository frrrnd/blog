.minibio
    background-color inherit

.minibio, .about
    a
        color white
        font-weight bold
        border-bottom 2px solid white
        width max-content
        transition .4s

        &:hover
            border-bottom-color rgba(255, 255, 255, .2)
            transition .4s

    .wrap
        display flex
        width 100%
        flex-direction row

        +below(47.25rem)
            flex-direction column
    
    .half
        flex 1
        padding 4em 0
        justify-content center

        +below(47.25rem)
            padding 32px

        p
            margin-bottom 32px

        img
            max-width 400px
            align-self end
        
        &--left
            ul
                list-style-type none
                font-family font-sans-serif

                li
                    font-size 2.8em

                    strong
                        color black
                        -webkit-text-stroke 1px white
                        -webkit-text-fill-color transparent
                        font-weight normal
                        position relative

.about
    .half
        strong
            font-family font-sans-serif
            font-size 2.5rem
            color inherit